<?xml version="1.0" encoding="utf-8"?>
<xyz.waiphyoag.padc_5_p_wpa_simple_habit_meditate.activities.activities.viewpods.Viewpod_Me xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/background_color"
            app:titleTextColor="@color/white_full">

        </android.support.v7.widget.Toolbar>


    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_xxxlarge"
        >

        <TextView
            android:id="@+id/tv_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_medium_2"
            android:layout_marginTop="@dimen/margin_medium_3"
            android:text="@string/tv_progress"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/text_regular_3x" />


        <TextView
            android:id="@+id/tv_streak_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_progress"
            android:layout_marginLeft="@dimen/margin_xxlarge"
            android:layout_marginTop="@dimen/margin_medium_2"
            android:text="@string/streak"
            android:textAlignment="center"
            android:textColor="#7e57c2"
            android:textSize="@dimen/text_heading_1x" />

        <TextView
            android:id="@+id/tv_streak"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_streak_count"
            android:layout_marginLeft="@dimen/margin_medium"
            android:text="@string/text_streak"
            android:textAlignment="center"
            android:textColor="#7e57c2" />


        <TextView
            android:id="@+id/tv_session_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_progress"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_medium_2"
            android:text="@string/sessions"
            android:textAlignment="center"
            android:textColor="#18ffff"
            android:textSize="@dimen/text_heading_1x" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_session_count"
            android:layout_centerHorizontal="true"
            android:text="@string/text_session"
            android:textAlignment="center"
            android:textColor="#18ffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_progress"
            android:layout_marginLeft="@dimen/margin_xxlarge"
            android:layout_marginRight="@dimen/margin_xxlarge"
            android:layout_marginTop="@dimen/margin_medium_2"
            android:text="@string/minutes"
            android:textAlignment="center"
            android:textColor="#4fc3f7"
            android:textSize="@dimen/text_heading_1x" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_session_count"
            android:layout_marginRight="@dimen/margin_medium_2"

            android:text="@string/text_total_minutes"
            android:textAlignment="center"
            android:textColor="#4fc3f7" />


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_session_count"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_xxxlarge"
            app:cardCornerRadius="@dimen/margin_card_medium">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f8bbd0">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_logo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/margin_medium"
                        android:paddingTop="@dimen/margin_large"
                        android:src="@drawable/ic_whatshot" />

                    <TextView
                        android:id="@+id/tv_unlimited"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_xxxlarge"
                        android:layout_marginTop="@dimen/margin_large"
                        android:text="@string/limited"
                        android:textColor="@color/white_full"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_unlimited"
                        android:layout_marginBottom="@dimen/margin_large"
                        android:layout_marginLeft="@dimen/margin_xxxlarge"
                        android:text="@string/best_teacher"
                        android:textColor="@color/white_full"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_margin="@dimen/margin_large"
                        android:src="@drawable/ic_chevron_right" />

                </RelativeLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>




        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/navigation_height"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="@color/navigation_background"
            app:itemIconTint="@color/secondary_text"
            app:itemTextColor="@color/white_full"
            app:menu="@menu/navigation_menu">

        </android.support.design.widget.BottomNavigationView>
    </RelativeLayout>


</xyz.waiphyoag.padc_5_p_wpa_simple_habit_meditate.activities.activities.viewpods.Viewpod_Me>

