<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color">


    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cv_small_content_3"
        app:cardCornerRadius="@dimen/margin_card_medium"
        android:layout_marginBottom="@dimen/margin_medium_2"
        android:layout_marginRight="@dimen/margin_medium_2"
        android:background="@color/background_color">

        <ImageView
            android:layout_width="@dimen/content_width"
            android:layout_height="@dimen/content_height"
            android:foreground="#3000"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_dummy_icon_3" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="@dimen/margin_medium"
            android:src="@drawable/ic_add_white" />
    </android.support.v7.widget.CardView>


    <TextView
        android:id="@+id/tv_tip_name"
        android:layout_width="@dimen/text_width_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cv_small_content_3"
        android:text="@string/content_3"
        android:textColor="@color/white_full"
        android:textSize="@dimen/text_regular_2x"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_tip_name"
        android:layout_below="@id/tv_tip_name"
        android:layout_marginBottom="@dimen/margin_medium_2"
        android:text="@string/duration"
        android:textColor="@color/secondary_text"
        android:textSize="@dimen/text_regular"

        />




</RelativeLayout>